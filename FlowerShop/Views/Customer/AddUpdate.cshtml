@using FlowerShop.Models
@model CustomerModel
@{
    ViewBag.Title = "AddUpdate";
}

<h2>AddUpdate</h2>

@using (Html.BeginForm("AddUpdate", "Customer", FormMethod.Post))
{
    <h4>Customer</h4>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2">Rg:</label>
            @Html.TextBoxFor(m => Model.Rg, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Name:</label>
            @Html.TextBoxFor(m => Model.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Phone:</label>
            @Html.TextBoxFor(m => Model.Phone, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">StreetName:</label>
            @Html.TextBoxFor(m => Model.StreetName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">HouseNumber:</label>
            @Html.TextBoxFor(m => Model.HouseNumber, new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>
}
<p>@Html.ActionLink("Go back", "Index", "Customer")</p>