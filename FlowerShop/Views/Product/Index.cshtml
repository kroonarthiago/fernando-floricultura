@using FlowerShop.Models
@model List<ProductModel>
@{
    ViewBag.Title = "Listar Products";
}

<h1>Products</h1>
<p>@Html.ActionLink("Add", "AddUpdate", "Product", new { Id = "" }, new { @class = "btn btn-default" })</p>


<table class="table table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Name</td>
                <td>@m.Type</td>
                <td>@m.Price</td>
                <td>@m.Quantity</td>
                <td>
                    @Html.ActionLink("Edit", "AddUpdate", "Product", new { Id = m.Id }, new { @class = "btn btn-default" }) &nbsp; &nbsp;
                    @Html.ActionLink("Remove", "Remove", "Product", new { Id = m.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    </tbody>
</table>