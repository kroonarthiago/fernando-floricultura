@using FlowerShop.Models
@model OrderModel
@{
    ViewBag.Title = "AddUpdate";
}

<h2>AddUpdate</h2>

@using (Html.BeginForm("AddUpdate", "Order", FormMethod.Post))
{
    <h4>Order</h4>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2">CustomerId:</label>
            @Html.TextBoxFor(m => Model.CustomerId, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">PurchaseDate:</label>
            @Html.TextBoxFor(m => Model.PurchaseDate, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">TotalPrice:</label>
            @Html.TextBoxFor(m => Model.TotalPrice, new { @class = "form-control" })
        </div>

    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>
}
<p>@Html.ActionLink("Go back", "Index", "Order")</p>